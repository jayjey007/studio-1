
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if true;
      allow update: if request.auth.uid == userId;
    }

    match /messages/{messageId} {
      allow read, write: if request.auth != null;
    }

    match /fcmTokens/{tokenId} {
      allow read, write: if request.auth != null;
    }
    
    match /letter/{entryId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.authorUsername == request.auth.token.name;
    }

    match /bucketList/{itemId} {
      allow read, write: if request.auth != null;
    }

    match /videoCalls/{callId} {
      allow read, write: if request.auth != null && (request.auth.uid == resource.data.initiatorUid || request.auth.uid == resource.data.recipientUid || request.resource.data.initiatorUid == request.auth.uid);
      allow create: if request.auth != null;
      allow delete: if request.auth != null && (request.auth.uid == resource.data.initiatorUid);
    }
    
    match /videoCalls/{callId}/initiatorCandidates/{candidateId} {
      allow read: if request.auth != null && get(/databases/$(database)/documents/videoCalls/$(callId)).data.recipientUid == request.auth.uid;
      allow create: if request.auth != null && get(/databases/$(database)/documents/videoCalls/$(callId)).data.initiatorUid == request.auth.uid;
    }

    match /videoCalls/{callId}/recipientCandidates/{candidateId} {
      allow read: if request.auth != null && get(/databases/$(database)/documents/videoCalls/$(callId)).data.initiatorUid == request.auth.uid;
      create: if request.auth != null && get(/databases/$(database)/documents/videoCalls/$(callId)).data.recipientUid == request.auth.uid;
    }
  }
}

