
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Following the prototype design, data is public to facilitate 
    // easy reading and writing for a two-user scenario and server-side analysis.
    // This resolves permission errors for the "heartbeat" lastActive updates
    // since the prototype uses sessionStorage auth instead of Firebase Auth.
    
    match /users/{userId} {
      allow read, write: if true;
    }

    match /messages/{messageId} {
      allow read, write: if true;
    }

    match /fcmTokens/{tokenId} {
      allow read, write: if true;
    }
    
    match /letter/{entryId} {
      allow read, write: if true;
    }

    match /bucketList/{itemId} {
      allow read, write: if true;
    }

    match /videoCalls/{callId} {
      allow read, write: if true;
    }
    
    match /videoCalls/{callId}/initiatorCandidates/{candidateId} {
      allow read, write: if true;
    }

    match /videoCalls/{callId}/recipientCandidates/{candidateId} {
      allow read, write: if true;
    }
  }
}
