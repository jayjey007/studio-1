rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Messages: Allow reads by anyone, writes only by authenticated users.
    // Deletes are restricted to the message sender.
    match /messages/{messageId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == resource.data.sender;
      allow delete: if request.auth != null && request.auth.uid == resource.data.sender;
    }

    // FCM Tokens: Users can only create/write their own FCM token.
    // No one can read other users' tokens.
    match /fcmTokens/{token} {
        allow read: if false;
        allow write: if request.auth != null && request.auth.uid == request.resource.data.uid;
    }
  }
}

    