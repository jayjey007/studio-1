
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth.uid == userId;
    }

    match /messages/{messageId} {
      allow read, write: if true;
    }

    match /fcmTokens/{tokenId} {
      allow read, write: if true;
    }
  }
}

  